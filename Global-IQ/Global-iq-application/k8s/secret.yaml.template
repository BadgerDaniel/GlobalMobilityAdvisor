apiVersion: v1
kind: Secret
metadata:
  name: global-iq-secrets
  labels:
    app: global-iq
type: Opaque
data:
  # IMPORTANT: These values must be base64 encoded
  # To encode: echo -n "your-value" | base64
  # To decode: echo "encoded-value" | base64 -d

  # Example encodings (DO NOT USE THESE IN PRODUCTION):
  # echo -n "password" | base64  -> cGFzc3dvcmQ=
  # echo -n "sk-your-openai-key" | base64  -> (your encoded key)

  chainlit-auth-secret: cGFzc3dvcmQ=  # CHANGE THIS - currently "password"
  openai-api-key: REPLACE_WITH_BASE64_ENCODED_OPENAI_KEY

  # To create your own secret.yaml:
  # 1. Copy this file to secret.yaml (DO NOT commit secret.yaml to git!)
  # 2. Replace the values above with your base64 encoded secrets
  # 3. Apply with: kubectl apply -f k8s/secret.yaml
